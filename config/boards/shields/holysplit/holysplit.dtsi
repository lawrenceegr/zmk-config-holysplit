#include <dt-bindings/zmk/matrix_transform.h>
#include <physical_layouts.dtsi>

/ {
	chosen {
		zmk,kscan = &kscan0;
		zmk,matrix_transform = &default_transform;
		zmk,physical-layout = &physical_layout;
	};

	default_transform: keymap_transform_0 {
		compatible = "zmk,matrix-transform";
		columns = <18>;
		rows = <5>;
		
		map = <
			RC(0,0) RC(0,1) RC(0,2) RC(0,3) RC(0,4) RC(0,5) RC(0,6)                                    RC(0,11) RC(0,12) RC(0,13) RC(0,14) RC(0,15) RC(0,16) RC(0,17)
            RC(1,0) RC(1,1) RC(1,2) RC(1,3) RC(1,4) RC(1,5) RC(1,6) RC(1,7)                   RC(1,10) RC(1,11) RC(1,12) RC(1,13) RC(1,14) RC(1,15) RC(1,16) RC(1,17)
			RC(2,0) RC(2,1) RC(2,2) RC(2,3) RC(2,4) RC(2,5) RC(2,6) RC(2,7)                   RC(2,10) RC(2,11) RC(2,12) RC(2,13) RC(2,14) RC(2,15) RC(2,16) RC(2,17)
			RC(3,0) RC(3,1) RC(3,2) RC(3,3) RC(3,4) RC(3,5) RC(3,6) RC(3,7)                   RC(3,10) RC(3,11) RC(3,12) RC(3,13) RC(3,14) RC(3,15) RC(3,16) RC(3,17)
			                        RC(4,3) RC(4,4) RC(4,5) RC(4,6) RC(4,7) RC(4,8)   RC(4,9) RC(4,10) RC(4,11) RC(4,12) RC(4,13) RC(4,14)          RC(4,16) 
			                                                                                                                               RC(5,15) RC(5,16) RC(5,17)
		>;
	};

	kscan0: kscan {
		compatible = "zmk,kscan-gpio-matrix";
		diode-direction = "col2row";
	};

	physical_layout: physical_layout {
		compatible = "zmk,physical-layout";
		display-name = "HolySplit";
		
		transform = <&default_transform>;
		
		kscan = <&kscan0>;
		
		keys  // x, y(mm), rotation, width, height (in key units)
			// Row 0 - Top number row
			= <  0    0  0 1 1>  // F13
			, < 24    0  0 1 1>  // Esc
			, < 43    0  0 1 1>  // 1
			, < 62    0  0 1 1>  // 2
			, < 81    0  0 1 1>  // 3
			, <100    0  0 1 1>  // 4
			, <119    0  0 1 1>  // 5
			, <195    0  0 1 1>  // 6
			, <214    0  0 1 1>  // 7
			, <233    0  0 1 1>  // 8
			, <252    0  0 1 1>  // 9
			, <271    0  0 1 1>  // 0
			, <290    0  0 1 1>  // Bksp
			, <314    0  0 1 1>  // F17
			
			// Row 1 - QWERTY
			, <  0   19  0 1 1>  // F14
			, < 24   19  0 1 1>  // Tab
			, < 43   19  0 1 1>  // Q
			, < 62   19  0 1 1>  // W
			, < 81   19  0 1 1>  // E
			, <100   19  0 1 1>  // R
			, <119   19  0 1 1>  // T
			, <138   19  0 1 1>  // Del
			, <176   19  0 1 1>  // `
			, <195   19  0 1 1>  // Y
			, <214   19  0 1 1>  // U
			, <233   19  0 1 1>  // I
			, <252   19  0 1 1>  // O
			, <271   19  0 1 1>  // P
			, <290   19  0 1 1>  // \
			, <314   19  0 1 1>  // F18
			
			// Row 2 - Home row
			, <  0   38  0 1 1>  // F15
			, < 24   38  0 1 1>  // Caps
			, < 43   38  0 1 1>  // A
			, < 62   38  0 1 1>  // S
			, < 81   38  0 1 1>  // D
			, <100   38  0 1 1>  // F
			, <119   38  0 1 1>  // G
			, <138   38  0 1 1>  // -
			, <176   38  0 1 1>  // J (left)
			, <195   38  0 1 1>  // H
			, <214   38  0 1 1>  // J (right)
			, <233   38  0 1 1>  // K
			, <252   38  0 1 1>  // L
			, <271   38  0 1 1>  // ;
			, <290   38  0 1 1>  // Enter
			, <314   38  0 1 1>  // F19
			
			// Row 3 - Bottom row
			, <  0   57  0 1 1>  // F16
			, < 24   57  0 1 1>  // Shift
			, < 43   57  0 1 1>  // Z
			, < 62   57  0 1 1>  // X
			, < 81   57  0 1 1>  // C
			, <100   57  0 1 1>  // V
			, <119   57  0 1 1>  // B
			, <138   57  0 1 1>  // =
			, <176   57  0 1 1>  // [
			, <195   57  0 1 1>  // ]
			, <214   57  0 1 1>  // N
			, <233   57  0 1 1>  // M
			, <252   57  0 1 1>  // ,
			, <271   57  0 1 1>  // .
			, <290   57  0 1 1>  // /
			, <314   57  0 1 1>  // F20
			
			// Thumb cluster row 1
			, < 57   81  0 1 1>  // Win (left)
			, < 76   81  0 1 1>  // Alt
			, < 95   81  0 1 1>  // Ctrl
			, <138   81 15 1 1>  // Layer1
			, <171   81 30 1 1>  // Layer3
			, <195   81 60 1 1>  // Layer4
			, <233  -57 -60 1 1>  // Layer5
			, <252  -57 -30 1 1>  // Ctrl (right)
			, <271  -38 -15 1 1>  // Space
			, <209   81  0 1 1>  // Layer2
			, <242   81  0 1 1>  // Win (right)
			, <261   81  0 1 1>  // Shift (right)
			
			// Arrow cluster
			, <385   71  0 1 1>  // Up
			, <366   90  0 1 1>  // Left
			, <385   90  0 1 1>  // Down
			, <404   90  0 1 1>  // Right
			;
	};
};